{# @var service \App\Entity\Service #}
{# @var image_main \App\Entity\Media #}
{# @var image_preview \App\Entity\Media #}

{% extends 'layouts/default.html.twig' %}

{% block title %}{{ service.title }} | Сити Сервис{% endblock %}
{% block meta %}
    <meta property="og:title" content="{{ service.title }}">
    <meta property="og:description"
          content="{{ service.description | striptags }}">
{% endblock %}

{% block content %}

    {% set image_main = service | filterServiceImage(1) %}
    {% set image_preview = service | filterServiceImage(2) %}

    {% if image_main is not null %}
        <img src="{{ vich_uploader_asset(image_main, 'imageFile') | imagine_filter_cache('banner_md') }}"
             alt="главная картинка услуги">
    {% endif %}

    {% if image_preview is not null %}
        <img src="{{ vich_uploader_asset(image_preview, 'imageFile') | imagine_filter_cache('banner_md') }}"
             alt="главная картинка услуги">
    {% endif %}

    {% set about = service.about.current %}
    {% if about %}
        {% include 'components/sections/about.html.twig' with { heading: 'Об услуге', title: about.title, description: about.description, image: null } %}
    {% endif %}

    {% if service.expertise | length %}
        {% include 'components/sections/service/expertise.html.twig' with { expertise: service.expertise } %}
    {% endif %}

{% endblock %}