{% extends 'layouts/default.html.twig' %}

{% block title %}Главная | Сити Сервис{% endblock %}
{% block meta %}
    <meta property="og:title" content="ООО Сити Сервис - клиниговые услуги для бизнеса">
    <meta property="og:description"
          content="Компания «Сити Сервис» — это крупное аутсорсинговое предприятие, основной специализацией которого является предоставление клининговых услуг в Северо-Западном округе Российской Федерации.">
{% endblock %}

{% block content %}

    {% include 'components/sections/home/hero.html.twig' %}

    {% set about = {
        heading: 'Кто мы',
        title: '<span>Эксперты в клининге с 2006 года.</span>
        <span>Применяем <strong>передовые технологии</strong></span>
        <span>и работаем на результат</span>',
        description: 'Мы одна из первых аутсорсинговый компаний России. Когда рынок услуг клининга только развивался, мы уже применяли передовые технологии, самые эффективные химические средства и новейшее оборудование. <br><br> Наши филиалы успешно работают от Калининграда до Омска, от Архангельска до Волгограда.',
        list: [
            {
                title: '17',
                description: 'лет на рынке аутсорсинга'
            },
            {
                title: '500+',
                description: 'клиентов'
            },
            {
                title: '12',
                description: 'регионов РФ'
            },
            {
                title: '3000+',
                description: 'сотрудников'
            },
            {
                title: '100+',
                description: 'объектов по стране'
            }
        ]
    } %}

    {% include 'components/sections/about.html.twig' with { heading: about.heading, title: about.title, description: about.description, list: about.list, static: true } %}

    {% if serviceList() | length %}
        {% include 'components/sections/home/services.html.twig' with { services: serviceList() } %}
    {% endif %}

    {% include'components/sections/info.html.twig' %}

    {% if advantages | length %}
        {% include 'components/sections/advantages.html.twig' with { advantages } %}
    {% endif %}

    {% if reviews | length %}
        {% include 'components/sections/reviews.html.twig' with { reviews } %}
    {% endif %}

    {% include 'components/sections/partners.html.twig' %}

{% endblock %}