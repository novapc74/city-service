{{ form_start(form, {
    'attr': {
        'class': 'feedback-form'
    },
}) }}

<div class="feedback-form__inputs">
    <label class="default-input feedback-form__input empty">
        {{ form_widget(form.feedback.name) }}
        <svg class="default-input__success-icon">
            <use xlink:href="{{ asset('build/images/svg/sprite.svg') }}#check-icon"></use>
        </svg>
        <svg class="default-input__error-icon">
            <use xlink:href="{{ asset('build/images/svg/sprite.svg') }}#error-icon"></use>
        </svg>
    </label>
    <label class="default-input feedback-form__input empty">
        {{ form_widget(form.feedback.phone) }}
        <svg class="default-input__success-icon">
            <use xlink:href="{{ asset('build/images/svg/sprite.svg') }}#check-icon"></use>
        </svg>
        <svg class="default-input__error-icon">
            <use xlink:href="{{ asset('build/images/svg/sprite.svg') }}#error-icon"></use>
        </svg>
    </label>
    <label class="default-input default-input_textarea feedback-form__input empty">
        {{ form_widget(form.feedback.comment) }}
    </label>
</div>

<label class="default-checkbox feedback-form__checkbox">
    {{ form_widget(form.feedback.agreeTerm) }}
    <span class="default-checkbox__checkbox">
        <svg>
            <use xlink:href="{{ asset('build/images/svg/sprite.svg') }}#check-icon"></use>
        </svg>
    </span>
    <span class="feedback-form__policy">
        Даю согласие на обработку <a href="{{ path('app_policy') }}">Персональных данных</a>
    </span>
</label>

<div class="my-custom-class-for-errors">
    {{ form_errors(form) }}
</div>

<button type="submit" class="default-button default-button_blue feedback-form__submit">Отправить</button>

{{ form_end(form) }}