<section class="section section_light services">
    <div class="container">
        <div class="section__header">
            <h2 class="section__heading">
                Услуги
            </h2>
        </div>
        <ul class="services__list">
            {% for service in serviceList() %}
                {% set image_preview = service | filterServiceImage(2) %}
                <li class="services__card services-card">
                    <div class="services-card__image">
                        {% if image_preview is not null %}
                            <picture >
                                <source srcset="{{ vich_uploader_asset(image_preview, 'imageFile') | imagine_filter_cache('medium') }}" type="image/webp">
                                <source srcset="{{ vich_uploader_asset(image_preview, 'imageFile') | imagine_filter_cache('medium') }}" type="image/jpeg">
                                <img src="{{ vich_uploader_asset(image_preview, 'imageFile') | imagine_filter_cache('medium') }}" alt="{{ service.title }}" loading="lazy">
                            </picture>
                        {% else %}
                            <picture >
                                <source srcset="{{ asset('build/images/default-service-image.webp') | imagine_filter_cache('medium') }}" type="image/webp">
                                <source srcset="{{ asset('build/images/default-service-image.jpg') | imagine_filter_cache('medium') }}" type="image/jpeg">
                                <img src="{{ asset('build/images/default-service-image.jpg') | imagine_filter_cache('medium') }}" alt="{{ service.title }}" loading="lazy">
                            </picture>
                        {% endif %}
                    </div>
                    <div class="services-card__inner">
                        <h3 class="title-18-28 services-card__title">{{ service.title }}</h3>
                        <div class="services-card__description">{{ service.description | raw }}</div>
                        <a href="/service/{{ service.slug }}"
                           class="default-button default-button_solid services-card__button">Подробнее об услуге</a>
                    </div>
                </li>
            {% endfor %}
        </ul>
    </div>
</section>